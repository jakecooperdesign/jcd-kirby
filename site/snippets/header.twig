<!doctype html>
<html lang="{{site.language() | default('en')}}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>{{page.title | default(site.title) | raw}}</title>
  <meta name="description" content="{{site.description | raw}}">

  {{ css('assets/css/main.css') }}

</head>
<body>

  <header role="banner" class="has-padding-vert-small">
    <div class="container">
      <div class="columns">
        <section class="column">
          <a href="{{ url() }}" rel="home">{{ site.title }}</a>
        </section>
        <section class="column has-text-right">
          <nav role="navigation">
            {% for page in pages.visible() %}
              <a class="has-padding-left-xs" href="{{page.url()}}">{{page.title}}</a>
            {% endfor %}
          </nav>
        </section>
      </div>
    </div>
  </header>
